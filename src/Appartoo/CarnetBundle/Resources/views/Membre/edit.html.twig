{% extends "AppartooCarnetBundle::index.html.twig" %}

{% block title %}
  Modifier un - {{ parent() }}
{% endblock %}

{% block Membre %}

  <h3>Modifier un Membre</h3>
  
   {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
   
   {{ form_errors(form) }}
	
	<div>
	
    <div class="form-group">
      {{ form_label(form.nom, "Nom : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.nom) }}
      <div class="col-sm-4">       
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
      </div>
	</div>
	
	  <div class="form-group">
      {{ form_label(form.prenom, "Prénom : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.prenom) }}
      <div class="col-sm-4">       
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
      </div>
	</div>
	
	  <div class="form-group">
      {{ form_label(form.email, "Email : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.email) }}
      <div class="col-sm-4">       
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
      </div>
	</div>
	
	  <div class="form-group">
      {{ form_label(form.adresse, "Adresse : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.adresse) }}
      <div class="col-sm-4">       
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
      </div>
	</div>
	
	  <div class="form-group">
      {{ form_label(form.tel, "Téléphone : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.tel) }}
      <div class="col-sm-4">       
        {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
      </div>
	</div>
	
	  <div class="form-group">
      {{ form_label(form.siteweb, "Site Web : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.siteweb) }}
      <div class="col-sm-4">       
        {{ form_widget(form.siteweb, {'attr': {'class': 'form-control'}}) }}
      </div>
	</div>
	 <div class="form-group">
	 <div class="col-sm-4"> 
	{{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
	</div>
	</div>
	</div>
	{{ form_rest(form) }}
	
	{{ form_end(form) }}
	

	

{% endblock %}